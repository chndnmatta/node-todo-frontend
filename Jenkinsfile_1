//Jenkins file only to tutorial example
pipeline {
  agent any
    
  tools {nodejs "node"}
  environment {NEXUS_SERVER = "http://nexus-common.apps.cluster.domain.example.com/repository/java"}
  stages {
        
    stage('Cloning Git') {
      steps {
        git 'https://github.com/chndnmatta/node-todo-frontend.git'
      }
    }
        
     stage('Install dependencies') {
      steps {
        sh 'npm install'
      }
    }
     
    stage('Test') {
      steps {
         sh 'npm test'
      }
    }
    
    stage('Package') {
      steps {
         sh '''
            zip -r node-todo.zip . -i node-todo-frontend
            '''
     }
    }
    
    stage('Publish') {
      steps {
         sh 'npm publish'
     }
    }
  }
}
